@{
    
}

<section>
    <table class="table table-sm table-striped table-bordered">
        <thead>
            <tr>
                <th style="width:50px;">No</th>
                <th>Name</th>
                <th>Jabatan</th>
                <th class="text-center">Aksi</th>
            </tr>
        </thead>
        <tbody id="TbodyEmployee">
            
        </tbody>
    </table>
</section>

@section Modals{
    <div class="modal" data-bs-backdrop="static" id="ModalDetail">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Employee Detail</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script>
        $(document).ready(() => {
            GetEmployees();
        });

        function GetEmployees()
        {
            $.ajax({
                async: true,
                type: 'GET',
                url: window.location.origin + '/Employee/GetEmployees',
                dataType: 'json',
                success: response => {
                    let no = 1;
                    response.forEach(item => {
                        $('#TbodyEmployee').append(`
                            <tr id="Tr_${item.Id}">
                                <td>${no++}</td>
                                <td>${item.Name}</td>
                                <td>${item.Jabatan}</td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-sm btn-primary" onclick="ShowDetail('${item.Id}');">Detail</button>
                                </td>
                            </tr>
                        `);

                        $(`#Tr_${item.Id}`).data('detail', item);
                    });
                }
            });
        }

        function ShowDetail(id)
        {
            let detail = $(`#Tr_${id}`).data('detail');

            let modal = $('#ModalDetail');
            let modalBody = modal.find('.modal-body');

            modalBody.html('');
            modalBody.append(`
                <div class="row">
                    <div class="col-lg-3">
                        ID
                    </div>

                    <div class="col-lg-9">
                        ${detail.Id}
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-3">
                        NAMA
                    </div>

                    <div class="col-lg-9">
                        ${detail.Name}
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-3">
                        JABATAN
                    </div>

                    <div class="col-lg-9">
                        ${detail.Jabatan}
                    </div>
                </div>
            `);
            modal.modal('show');

        }
    </script>
}